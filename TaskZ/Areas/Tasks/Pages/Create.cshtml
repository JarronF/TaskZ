@page
@model CreateModel
@{
}

<div class="text-center">
    <h3>Create a new Task to track</h3>
    <form class="form-horizontal" method="post">
        <div class="row form-group">
            <label asp-for="Input.Title" class="control-label col-2 text-right"></label>
            <input asp-for="Input.Title" type="text" class="form-control col-6" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>

            <label asp-for="Input.DueDate" class="control-label col-2 text-right"></label>
            <input asp-for="Input.DueDate" type="date" class="form-control col-2" />
        </div>
        <div class="row form-group">
            <label asp-for="Input.ShortDescription" class="control-label col-2 text-right"></label>
            <textarea asp-for="Input.ShortDescription" class="form-control col-6" rows="4"></textarea>
            <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>

            <label asp-for="Input.SelectedUserID" class="control-label col-2 text-right"></label>
            <select asp-for="Input.SelectedUserID" class="form-control col-2" asp-items="@Model.UsersDropDownList">
                <option value="">--Choose User--</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    
</div>